<!-- form for creating a new business -->

<%= form_for business_path_url, :url => { :action => "create" } do |f| %>
<%= f.label :title, "Name of Business"  %>
<%= f.text_field :title %>
<br>
<br>
<%= f.select :category, [ 'Apparel', 'Content Creators', 'Floral', 'Tech'], :prompt => 'Select A Category' %>
<br>
<br> 
<%= f.label :image %>
<%= f.file_field :image %>
<br>
<br>
<%= f.label :city %>
<%= f.text_field :city %>
<br>
<br>
<%= f.label :state %>
<%= f.text_field :state %>
<br>
<br>
<%= f.label :description  %>
<%= f.text_field :description %>
<br>
<br>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= f.submit "Forge Business" %>

<% end %>